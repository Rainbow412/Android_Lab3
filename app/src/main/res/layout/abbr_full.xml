<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/abbr_full_layout">


    <TextView
        android:id="@+id/name_abbr"
        android:textColor="@color/name_abbr"
        android:textSize="@dimen/name_size"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yuan"
        android:layout_marginLeft="@dimen/name_margin"
        android:layout_marginBottom="@dimen/name_margin"
        android:layout_marginTop="@dimen/name_margin"/>

    <Button
        android:id="@+id/name_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/name_black"
        android:textSize="@dimen/name_size"
        android:textAllCaps="false"
        android:paddingTop="@dimen/name_margin"
        android:paddingBottom="@dimen/name_margin"
        android:paddingLeft="@dimen/abbr_full_space"
        android:gravity="center_vertical"
        android:background="@color/full_name_button"/>

</LinearLayout>
